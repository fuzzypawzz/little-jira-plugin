{
  "manifest_version": 2,
  "name": "__MSG_extName__",
  "homepage_url": "http://localhost:8080/",
  "description": "A third-party browser extension for Jira",
  "default_locale": "en",

  "options_ui": {
      "page": "options.html",
      "browser_style": true,
      "chrome_style": true
  },

  "permissions": [
    "<all_urls>",
    "tabs",
    "storage"
  ],

  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },

  "background": {
    "scripts": [
      "browser-polyfill.js",
      "js/background.js"
    ],
    "persistent": true
  },

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "__MSG_extName__",
    "default_icon": {
      "19": "icons/19.png",
      "38": "icons/38.png"
    }
  }
}
